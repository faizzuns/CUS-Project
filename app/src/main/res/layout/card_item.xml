<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@android:color/white"
    android:layout_marginBottom="15dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@color/colorAccent"
        android:id="@+id/img_item"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_item"
        android:layout_toLeftOf="@+id/img_favourite"
        android:id="@+id/txt_item_name"
        android:text="Nama Item"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_item"
        android:layout_toLeftOf="@+id/img_favourite"
        android:id="@+id/txt_description_item"
        android:textSize="13sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/txt_item_name"
        android:text="Deskripsi Item ini adalah"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/love_kosong"
        android:id="@+id/img_favourite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 25.000"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@+id/img_item"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/img_item"
        android:id="@+id/txt_price_item"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_price_item"
        android:orientation="horizontal"
        android:id="@+id/root_plus"
        android:background="@color/blueApp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_action_minus"
            android:id="@+id/btn_decrease"
            android:layout_margin="2dp"></RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white">
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/blueApp"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:id="@+id/txt_count"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/blueApp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_action_add"
            android:layout_margin="2dp"
            android:id="@+id/btn_increase"></RelativeLayout>
    </LinearLayout>
</RelativeLayout>