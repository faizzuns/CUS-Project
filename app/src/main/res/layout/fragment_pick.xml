<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="user.com.cus.Fragment.LoginRegister.PickFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="30dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:src="@drawable/icon_transparant"
            android:layout_gravity="center_horizontal"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="5dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/register"
                android:id="@+id/btn_register"
                android:background="@color/yellowButton"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/login"
                android:id="@+id/btn_login"
                android:background="@color/yellowButton"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/card_google">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/sign_in_button"
                    android:background="@color/redApp"
                    android:text="Login With Google"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"/>
            </android.support.v7.widget.CardView>
            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:id="@+id/progress_google"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
